module shifter16 (
    input x[16],
    input y[16],
    input alufn[6],
    output result[16]
  ) {

  always {
    //shifts a left, right or right arithmetically by b
    case(alufn[1:0]){
      b00: //shift left
        result = x << y[3:0];
      b01: //shift right
        result = x >> y[3:0]; 
      b11: //shift right arithmetically
        result = x >>> y[3:0];
      default:
        result = 16b0;
      }
  }
}
